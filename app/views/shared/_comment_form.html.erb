<%= form_for @comment do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new comment..." %>
		<%= f.hidden_field :entry_id, :value => @entry.id %>
	</div>
	<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>